<?xml version="1.0" encoding="utf-8" ?>
<!-- Default button background drawable
	Modified from http://docs.xamarin.com/recipes/android/resources/general/style_a_button/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape>
      <solid
          android:color="#E8E8E8" />
      <stroke
          android:width="1dp"
          android:color="#D8D8D8" />
      <corners
          android:radius="2dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#E8E8E8"
          android:endColor="#D8D8D8"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#D8D8D8" />
      <corners
          android:radius="2dp" />
    </shape>
  </item>
</selector>