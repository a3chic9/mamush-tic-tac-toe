<?xml version="1.0" encoding="utf-8" ?>
<!-- Button background drawable for winning button 
	Modified from http://docs.xamarin.com/recipes/android/resources/general/style_a_button/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#66FF33" />
      <stroke
          android:width="1dp"
          android:color="#5CAD5C" />
      <corners
          android:radius="2dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#66FF33"
          android:endColor="#5CAD5C"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#5CAD5C" />
      <corners
          android:radius="2dp" />
    </shape>
  </item>
</selector>